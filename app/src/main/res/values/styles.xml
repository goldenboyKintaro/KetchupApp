<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KetchupApp.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>

        <item name="android:textViewStyle">@style/sfpro</item>
        <item name="expandedTitleTextAppearance">
            @style/TextAppearance.KetchupApp.CollapsingToolbar.Expanded
        </item>
        <item name="collapsedTitleTextAppearance">
            @style/TextAppearance.KetchupApp.CollapsingToolbar.Collapsed
        </item>
        <item name="appBarLayoutStyle">@style/Widget.KetchupApp.AppbarLayout</item>
    </style>


    <style name="Widget.KetchupApp.AppbarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <!--For compatibility-->
        <item name="background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="sfpro" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/sfpro_display</item>
    </style>

    <style name="TextAppearance.KetchupApp.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/sfpro_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.KetchupApp.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/sfpro_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.KetchupApp.TitleText" parent="TextAppearance.MaterialComponents.Headline3">

    </style>


    <style name="Base.Widget.KetchupApp.BlockButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="iconPadding">5dp</item>
    </style>


    <style name="Base.Widget.KetchupApp.SearchBar" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="MaterialSearchViewStyle">
        <item name="iconTint">@color/white</item>
        <item name="searchVoiceIcon">@drawable/microphone</item>
        <item name="searchCloseIcon">@drawable/xmark</item>
        <item name="searchBackIcon">@drawable/arrow_left</item>
        <item name="searchSuggestionBackground">@color/blue_900</item>
        <item name="historyIcon">@drawable/clock_rotate_left</item>
        <item name="suggestionIcon">@drawable/magnifying_glass_thin</item>
        <item name="listTextColor">@color/white</item>
        <item name="searchBarHeight">?attr/actionBarSize</item>
        <item name="voiceHintPrompt">@string/hint_prompt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_200</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:inputType">textCapWords</item>
    </style>
</resources>